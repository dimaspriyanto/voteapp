%h1 Listing votes

%table
  %tr
    %th Title
    %th Description
    %th

  - @votes.each do |vote|
    %tr
      %td= vote.title
      %td= vote.description
      %td
        - if current_user == vote.user
          = link_to 'Show', vote
          = link_to 'Edit', edit_vote_path(vote)
          = link_to 'Destroy', vote, :confirm => 'Are you sure?', :method => :delete

%br

